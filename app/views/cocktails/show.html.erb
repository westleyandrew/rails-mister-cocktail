<h1><%= @cocktail.name %></h1>
<div class="container center_div_show">
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, round: 20 %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> of <%= dose.ingredient.name %><%= link_to "", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>

  <div class="container d-flex justify-content-between">
    <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-add-cocktail" %></p>
    <p><%= link_to "Delete cocktail", cocktail_path(@cocktail), class: "btn btn-add-cocktail",
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
    <p><%= link_to "Back to cocktail list", cocktails_path, class: "btn btn-add-cocktail" %></p>
  </div>
</div>
