<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>

    <li><%= dose.description %> of <%= dose.ingredient.name %></li>
    <p><%= link_to "Delete dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>

  <% end %>

</ul>

<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p


<p><%= link_to "Back to cocktail list", cocktails_path %></p>
