
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(https://images.unsplash.com/photo-1496318447583-f524534e9ce1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1705&q=80);">
  <div class="container">
    <h1>Is it cocktail hour?</h1>
    <h1 class="banner"><%= link_to "Add a new cocktail", new_cocktail_path %></h1>
    <h1><span id="banner-typed-text"></span></h1>
  </div>
</div>
<div class="col-lg-12">
  <div class="container">
    <div class="row justify-content-around">
      <% @cocktails.each do |cocktail| %>
        <div id="show-card" class="card col-lg-5 mr-1 ml-1 mb-1 mt-3">
          <img class="card-img-top pt-3 rounded" src="<%= cocktail.photo %>" alt="Card image cap">
          <div class="card-body p-1">
            <h3 class="card-title mb-0"><%= cocktail.name %></h3>
          </div>
          <a href="<%= cocktail_path(cocktail.id) %>" class="btn btn-add-cocktail btn-block mb-3">Cocktail Recipe</a>
        </div>
      <% end %>
    </div>
  </div>


